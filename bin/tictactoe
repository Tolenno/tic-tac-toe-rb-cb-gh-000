#!/usr/bin/env ruby

require_relative '../lib/tic_tac_toe'

board = ["X", "X", " ", " ", " ", " ", " ", " ", " "]

def play
  while !over?(board)
  turn(board)
  if won?(board)
    puts "Congratulations #{winner(board)}, you are the winner!"
    break
  elsif draw?(board)
    puts "The game is a draw!"
    break
  end
end
end

play(board)
