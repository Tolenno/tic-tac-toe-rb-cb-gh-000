#!/usr/bin/env ruby

require_relative '../lib/tic_tac_toe'
while !over?(board)
  turn(board)
  if won?(board)
    puts "Congratulations #{winner(board)}, you are the winner!"




until the game is over
  take turns
end

if the game was won
  congratulate the winner
else if the game was a draw
  tell the players it has been a draw
end
